<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<RelativeLayout
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		tools:context="com.example.android.materialme.DetailActivity">

		<ImageView
			android:id="@+id/detailSportsImage"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true" />

		<TextView
			style="@style/TextAppearance.AppCompat.Headline"
			android:id="@+id/detailTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignBottom="@id/detailSportsImage"
			android:padding="16dp"
			android:text="@string/title_placeholder"
			android:theme="@style/ThemeOverlay.AppCompat.Dark" />

		<TextView
			style="@style/TextAppearance.AppCompat.Subhead"
			android:id="@+id/detailNewsTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/detailSportsImage"
			android:padding="16dp"
			android:text="@string/news_placeholder"
			android:textColor="?android:textColorSecondary" />

		<TextView
			style="@style/TextAppearance.AppCompat.Subhead"
			android:id="@+id/detailSubTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/detailNewsTitle"
			android:padding="16dp"
			android:text="@string/lorem_ipsum" />

	</RelativeLayout>
</ScrollView>
